{% extends 'base.html.twig' %}

{% block title %}{{parent()}} - Edition Artiste{% endblock %}
{% block body %}
<h1 class="pt-2 text-center">Edition Artiste</h1>
{{form_start(formArtiste)}}
<div class="row">
    <div class="col">
    {{form_row(formArtiste.description)}}
    </div>
    <div class="col">
    {{form_row(formArtiste.nom, {'label' : "Nom de l'artiste"})}}
    {{form_row(formArtiste.site, {'label' : "Site Web"})}}
    {{form_row(formArtiste.image, {'label' : "Image de profil"})}}
    {{form_row(formArtiste.type)}}
    </div>
</div>
<input type="submit" class="btn btn-success" value="valider">
{{form_end(formArtiste)}}
{% endblock %}